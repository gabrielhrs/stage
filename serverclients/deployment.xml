<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid.dtd">
<platform version="3">
  <!-- The server process (with some arguments) -->
  <process host="Tremblay" function="server">
    <argument value="0"/>
    <argument value="4"/> <!-- Number of clients -->
  </process>
  <!-- The clients processes -->
  <process host="Jupiter" function="client">
    <argument value ="1"/>
    <argument value="50000000"/>  <!-- Computation size of tasks -->
    <argument value="1000000"/>   <!-- Communication size of tasks -->
  </process>
  <process host="Fafard" function="client">
    <argument value ="2"/>
    <argument value="50000000"/>  <!-- Computation size of tasks -->
    <argument value="1000000"/>   <!-- Communication size of tasks -->
  </process>
  <process host="Ginette" function="client">
    <argument value ="3"/>
    <argument value="50000000"/>  <!-- Computation size of tasks -->
    <argument value="1000000"/>   <!-- Communication size of tasks -->
  </process>
  <process host="Bourassa" function="client">
    <argument value ="4"/>
    <argument value="50000000"/>  <!-- Computation size of tasks -->
    <argument value="1000000"/>   <!-- Communication size of tasks -->
  </process>

</platform>
